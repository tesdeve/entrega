<p id="notice"><%= notice %></p>

<h1 class="headingspace"><%= @company.name %> Transporters</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Telephone</th>
      <th>Email</th>
      <th>Status</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transporters.each do |transporter| %>
      <tr>
        <td><%= transporter.name %></td>
        <td><%= transporter.telephone %></td>
        <td><%= transporter.email %></td>
        <td><%= transporter.status %></td>
        <td><%= transporter.company.name %></td>
        <% if @company.present? %>
          <td><%= link_to company_transporter_path(@company, transporter) do %><span class="fa fa-eye"></span><% end %></td>

        <td><%= link_to edit_company_transporter_path(@company, transporter) do %><span class="fa fa-edit"></span><% end %></td>
        <td><%= link_to company_transporter_path(@company, transporter), method: :delete, data: { confirm: 'Are you sure?' } do %><span class="fa fa-trash"></span><% end %></td>

          <% else %>
        <td></td>
         <td></td>
          <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>
<%= link_to 'New Transporter', new_company_transporter_path(@company, @transporter) %> |
<%= link_to 'Back to Company', company_path(@company) %>

<hr>
