<p id="notice"><%= notice %></p>

<h1>Senders</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Telephone</th>
      <th>Email</th>
      <th>Address</th>
      <th>Coordinates</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @senders.each do |sender| %>
      <tr>
        <td><%= sender.name %></td>
        <td><%= sender.telephone %></td>
        <td><%= sender.email %></td>
        <td><%= sender.address %></td>
        <td><%= [sender.latitude, sender.longitude].to_dms %></td>
        <td><%= sender.status %></td>
        <td><%= link_to sender do %><span class="fa fa-eye"></span><% end %></td>
        <td><%= link_to edit_sender_path(sender) do %><span class="fa fa-edit"></span><% end %></td>
        <td><%= link_to sender, method: :delete, data: { confirm: 'Are you sure?' } do %><span class="fa fa-trash"></span><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>
<%= link_to 'New Sender', new_sender_path %>
<hr>
