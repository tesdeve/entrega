                  :icon_anchor => [20, 20],
                  :popup_anchor => [0, -20]}
    target_icon = {:name => 'target',
                      :icon_url => asset_path('target.png'),
                      :icon_size => [40, 40],
                      :icon_anchor => [20, 20],
                      :popup_anchor => [0, -20]}
    pu_latlng = [@order.pu_lat, @order.pu_lng]
    dy_latlng = [@order.dy_lat, @order.dy_lng]
    map(
        :center => {
          :latlng => pu_latlng,
          :zoom => 13
        },
        :markers => [
          {
          :latlng => pu_latlng,
